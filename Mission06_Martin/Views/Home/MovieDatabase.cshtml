@{
    ViewData["Title"] = "Movie Database";
}
@model Mission06_Martin.Models.Movie


<!-- Rai Martin Section 002 -->
<!-- Main Container -->
<!-- Movie Form Section -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Movie Form -->
            <form method="post">

                <!-- Movie Category Dropdown -->
                <div class="form-group">
                    <label asp-for="movieCategory">Category:</label>
                    <select asp-for="movieCategory" class="form-control">
                        <option value="">Select a Category</option>
                        <option value="Action">Action</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Drama">Drama</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Horror">Horror</option>
                        <option value="Romance">Romance</option>
                        <option value="Sci-Fi">Sci-Fi</option>
                        <option value="Thriller">Thriller</option>
                        <!-- Add other categories as needed -->
                    </select>
                    <span asp-validation-for="movieCategory" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Title -->
                <div class="form-group">
                    <label asp-for="movieTitle">Title:</label>
                    <input asp-for="movieTitle" type="text" class="form-control" placeholder="Enter movie title">
                    <span asp-validation-for="movieTitle" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Year -->
                <div class="form-group">
                    <label asp-for="movieYear">Year:</label>
                    <input asp-for="movieYear" type="text" class="form-control" placeholder="Enter year of release">
                    <span asp-validation-for="movieYear" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Director -->
                <div class="form-group">
                    <label asp-for="movieDirector">Director:</label>
                    <input asp-for="movieDirector" type="text" class="form-control" placeholder="Enter director's name">
                    <span asp-validation-for="movieDirector" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Rating Dropdown -->
                <div class="form-group">
                    <label asp-for="movieRating">Rating:</label>
                    <select asp-for="movieRating" class="form-control">
                        <option value="">Select a Rating</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                    <span asp-validation-for="movieRating" class="text-danger"></span>
                </div>
                <br />

                <!-- Edited Field (Yes/No Radio Buttons) -->
                <div class="form-group">
                    <label>Edited:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="movieEdited" class="form-check-input" type="radio" id="movieEditedYes" value="true">
                            <label class="form-check-label" for="movieEditedYes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="movieEdited" class="form-check-input" type="radio" id="movieEditedNo" value="false">
                            <label class="form-check-label" for="movieEditedNo">No</label>
                        </div>
                    </div>
                    <span asp-validation-for="movieEdited" class="text-danger"></span>
                </div>
                <br />

                <!-- Lent To -->
                <div class="form-group">
                    <label asp-for="movieLentTo">Lent To:</label>
                    <input asp-for="movieLentTo" type="text" class="form-control" placeholder="Enter name if lent">
                    <span asp-validation-for="movieLentTo" class="text-danger"></span>
                </div>
                <br />

                <!-- Notes (Limited to 25 Characters) -->
                <div class="form-group">
                    <label asp-for="movieNotes">Notes:</label>
                    <textarea asp-for="movieNotes" class="form-control" rows="3" placeholder="Additional notes"></textarea>
                    <span asp-validation-for="movieNotes" class="text-danger"></span>
                </div>
                <br />

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Submit</button>

            </form>


        </div>
    </div>
</div>
