@{
    ViewData["Title"] = "Add to Collection";
}
@model Mission06_Martin.Models.Movie


<!-- Rai Martin Section 002 -->
<!-- Main Container -->
<!-- Movie Form Section -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Movie Form -->
            <form method="post">

                
                <input type="hidden" asp-for="MovieId" />

                <!-- Movie Title -->
                <div class="form-group">
                    <label asp-for="Title">Title:</label> 
                    <input asp-for="Title" type="text" class="form-control" placeholder="Enter movie title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Year -->
                <div class="form-group">
                    <label asp-for="Year">Year:</label>
                    <input asp-for="Year" type="text" class="form-control" placeholder="Enter year of release">
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Director -->
                <div class="form-group">
                    <label asp-for="Director">Director:</label>
                    <input asp-for="Director" type="text" class="form-control" placeholder="Enter director's name">
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Rating Dropdown -->
                <div class="form-group">
                    <label asp-for="Rating">Rating:</label>
                    <select asp-for="Rating" class="form-control">
                        <option value="">Select a Rating</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <br />

                <!-- Movie Rating Dropdown \ Uses ViewBag to access the Categories table -->
                <div class="form-group">
                    <label asp-for="CategoryId">Category:</label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">Select a Category</option>
                        @foreach (Category c in ViewBag.categories)
                        {
                            <option value="@c.CategoryId">@c.CategoryName</option>
                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <br />

                <!-- Copied to Plex (Yes/No Radio Buttons) -->
                <div class="form-group">
                    <label>Copied on Plex:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="CopiedToPlex" class="form-check-input" type="radio" id="movieCopiedYes" value="true">
                            <label class="form-check-label" for="movieCopiedYes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="CopiedToPlex" class="form-check-input" type="radio" id="movieCopiedNo" value="false">
                            <label class="form-check-label" for="movieCopiedNo">No</label>
                        </div>
                    </div>
                    <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
                </div>
                <br />

                <!-- Edited Field (Yes/No Radio Buttons) -->
                <div class="form-group">
                    <label>Edited:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Edited" class="form-check-input" type="radio" id="movieEditedYes" value="true">
                            <label class="form-check-label" for="movieEditedYes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Edited" class="form-check-input" type="radio" id="movieEditedNo" value="false">
                            <label class="form-check-label" for="movieEditedNo">No</label>
                        </div>
                    </div>
                    <span asp-validation-for="Edited" class="text-danger"></span>
                </div>
                <br />

                <!-- Lent To -->
                <div class="form-group">
                    <label asp-for="LentTo">Lent To:</label>
                    <input asp-for="LentTo" type="text" class="form-control" placeholder="Enter name if lent">
                    <span asp-validation-for="LentTo" class="text-danger"></span>
                </div>
                <br />

                <!-- Notes (Limited to 25 Characters) -->
                <div class="form-group">
                    <label asp-for="Notes">Notes:</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <br />

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Submit</button>

                <div asp-validation-summary="All"></div>

            </form>


        </div>
    </div>
</div>
