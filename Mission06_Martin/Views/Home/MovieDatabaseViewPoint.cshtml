@{
    ViewData["Title"] = "Collection";
}

@model List<Movie>

<!-- Rai Martin Section 002 -->
<!-- Joel Hilton's Collection view page -->

<!-- Link -->
<div class="text-center">
    <a asp-controller="Home" asp-action="JoelHiltonMovieCollection">Click here to add a movie to the collection!</a>
</div>
<br />

<table class="table table-bordered">

    <thead class="fw-bold">

        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Copied To Plex</td>
            <td>Lent To</td>
            <td>Notes</td>

        </tr>
    
    </thead>

    @foreach (var movie in Model)
    {
        <tbody>
            <tr>
                <td>@movie.Category?.CategoryName</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.CopiedToPlex</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-action="delete" asp-route-id="@movie.MovieId">Delete</a></td>
            </tr>
        </tbody>
    }

</table>